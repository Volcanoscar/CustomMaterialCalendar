<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin5dp"
    android:background="@color/white"
    android:gravity="center_horizontal">


    <ImageView
        android:id="@+id/date_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/date"
        android:layout_alignTop="@+id/date"
        android:scaleType="fitCenter"
        android:src="@drawable/date_selected"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/date"
        style="@style/CustomTextViewGray"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="@dimen/padding10dp"
        android:text="10"
        android:textColor="@color/blackFont" />

    <ImageView
        android:id="@+id/date_icon"
        android:layout_width="match_parent"
        android:layout_alignBottom="@+id/date"
        android:layout_height="@dimen/widthHeight10dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        android:src="@drawable/bluedot" />


</RelativeLayout>